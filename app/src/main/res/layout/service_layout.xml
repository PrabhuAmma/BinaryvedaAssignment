<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/head_img"
        android:layout_width="79pt"
        android:layout_height="83pt"
        android:layout_marginLeft="40pt"
        android:layout_marginStart="40pt"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="201pt"
        android:layout_height="wrap_content"
        android:layout_marginTop="29pt"
        android:layout_marginLeft="37pt"
        android:layout_marginStart="37pt"
        android:textSize="28pt"
        android:fontFamily="@font/bebas_neue_font_bold_family"
        android:text="@string/service_head_txt"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="189pt"
        android:layout_marginTop="29pt"
        android:layout_marginLeft="37pt"
        android:layout_marginStart="37pt"
        android:layout_marginRight="100pt"
        android:layout_marginEnd="100pt"
        android:textSize="16pt"
        android:fontFamily="@font/bebas_neue_font_family"
        android:text="@string/service_txt"/>
</LinearLayout>