<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LandingActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_width="100pt"
                android:layout_height="50pt"
                android:layout_marginStart="10pt"
                android:layout_marginLeft="10pt"
                android:layout_marginTop="15pt"
                android:src="@drawable/ic_head_mock" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginTop="7pt"
                android:src="@drawable/ic_group_mock"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/head_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15pt"
                android:textColor="@color/black"
                android:fontFamily="@font/bebas_neue_font_family"
                android:text="@string/top_one_txt"
                android:layout_marginRight="16pt"
                android:layout_marginEnd="16pt"
                android:layout_marginLeft="16pt"
                android:layout_marginStart="16pt"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5pt"
                android:orientation="horizontal">
                <RelativeLayout
                    android:id="@+id/nav_click"
                    android:layout_width="150dp"
                    android:layout_height="23pt"
                    android:layout_marginTop="7pt"
                    android:layout_marginLeft="10pt"
                    android:layout_marginStart="10pt"
                    android:text=""
                    android:background="@drawable/round_btn_bg">
                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/arrow"
                        android:layout_width="8pt"
                        android:layout_height="16pt"
                        android:src="@drawable/ic_go_mock"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="4dp"
                        android:layout_marginStart="4dp" />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12pt"
                        android:textColor="@color/white"
                        android:fontFamily="@font/bebas_neue_font_family"
                        android:layout_toRightOf="@+id/arrow"
                        android:layout_marginTop="2dp"
                        android:text="@string/reg_txt"
                        android:layout_marginLeft="4pt"
                        android:layout_marginStart="4pt"
                        android:layout_toEndOf="@+id/arrow" />
                </RelativeLayout>
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8pt"
                    android:textSize="10pt"
                    android:layout_marginLeft="5pt"
                    android:layout_marginStart="5pt"
                    android:textColor="@color/black"
                    android:fontFamily="@font/bebas_neue_font_bold_family"
                    android:text="@string/sec_txt" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16pt"
                android:orientation="horizontal">
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="12pt"
                    android:layout_height="11pt"
                    android:src="@drawable/ic_track_mock"
                    android:layout_marginLeft="20pt"
                    android:layout_marginStart="20pt"
                    android:layout_gravity="center"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10pt"
                    android:textColor="#577bdf"
                    android:fontFamily="@font/bebas_neue_font_family"
                    android:text="track my application"
                    android:layout_gravity="center"
                    android:layout_marginLeft="15pt"
                    android:layout_marginStart="15pt" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/serviceView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="11pt"
                android:orientation="vertical"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/face_book"
                    android:layout_width="22pt"
                    android:layout_height="22pt"
                    android:src="@drawable/face_book_icon"
                    android:layout_centerInParent="true"/>
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="22pt"
                    android:layout_height="22pt"
                    android:layout_toRightOf="@+id/face_book"
                    android:layout_marginLeft="5pt"
                    android:layout_toEndOf="@+id/face_book"
                    android:src="@drawable/insta_icon"
                    android:layout_marginStart="5pt" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="11pt"
                android:layout_marginLeft="11pt"
                android:layout_marginStart="11pt"
                android:layout_marginRight="11pt"
                android:layout_marginEnd="11pt"
                android:background="@color/border_wht"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="match_parent"
                android:layout_height="28pt"
                android:layout_marginTop="10pt"
                android:layout_marginLeft="10pt"
                android:layout_marginStart="10pt"
                android:layout_marginRight="20pt"
                android:layout_marginEnd="20pt"
                android:src="@drawable/ic_bottom_mock"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_marginTop="10pt"
                android:layout_marginLeft="20pt"
                android:layout_marginStart="20pt"
                android:layout_marginRight="20pt"
                android:layout_marginEnd="20pt">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/bebas_neue_font_medium"
                        android:text="@string/about_txt"
                        android:textColor="@color/black"
                        android:textSize="10pt"/>
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5pt"
                        android:fontFamily="@font/bebas_neue_font_medium"
                        android:text="@string/team_txt"
                        android:textColor="@color/black"
                        android:textSize="10pt"/>
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5pt"
                        android:fontFamily="@font/bebas_neue_font_medium"
                        android:text="@string/reach_txt"
                        android:textColor="@color/black"
                        android:textSize="10pt"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="10pt"
                    android:layout_marginStart="10pt"
                    android:orientation="vertical">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/bebas_neue_font_medium"
                        android:text="@string/affiliattion_txt"
                        android:textColor="@color/black"
                        android:textSize="10pt"/>
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5pt"
                        android:fontFamily="@font/bebas_neue_font_medium"
                        android:text="@string/disclaimers_txt"
                        android:textColor="@color/black"
                        android:textSize="10pt"/>
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5pt"
                        android:fontFamily="@font/bebas_neue_font_medium"
                        android:text="@string/privacy_txt"
                        android:textColor="@color/black"
                        android:textSize="10pt"/>
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="5pt"
                android:layout_marginLeft="10pt"
                android:layout_marginStart="10pt"
                android:layout_marginRight="10pt"
                android:layout_marginEnd="10pt"
                android:background="@color/border_wht"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="24pt"
                android:layout_marginLeft="20pt"
                android:layout_marginStart="20pt"
                android:layout_marginRight="20pt"
                android:layout_marginEnd="20pt"
                android:layout_marginTop="5pt"
                android:layout_marginBottom="20pt"
                android:orientation="horizontal">
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="15pt"
                    android:layout_height="15pt"
                    android:src="@drawable/ic_copy_right"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10pt"
                    android:text="@string/copy_right_txt"
                    android:fontFamily="@font/bebas_neue_font_family"
                    android:layout_marginLeft="5pt"
                    android:layout_marginStart="5pt" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>